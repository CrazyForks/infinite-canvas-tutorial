  "keywords": [
    "infinite canvas",
    "tutorial",
    "webgl",
    "webgpu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoiver/infinite-canvas-tutorial"
  },
  "license": "MIT",
  "author": {
    "name": "xiaoiver",
    "url": "https://github.com/xiaoiver"
  },
  "scripts": {
    "clean": "rimraf dist",
